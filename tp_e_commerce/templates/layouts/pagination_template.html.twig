{% if pageCount > 1 %}
  <nav  aria-label="...">
    <ul style="display: flex; align-items:center; justify-content:space-around;" class="pagination">
      {% if previous is defined %}
        <li class="page-item ">
          <a class="page-link" href="{{path(route,query|merge({(pageParameterName):previous}))}}" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
      {% endif %}

      {% for page in pagesInRange %}
        {% if page != current %}
          <li class="page-item active" aria-current="page" >
            <a style="border-radius:50%" class="page-link" href="{{path(route,query|merge({(pageParameterName):page}))}}">{{page}} </a>
          </li>
        {% else %}
          <li class="page-item active" aria-current="page" >
           <a style="border-radius:50%; background:green" class="page-link disabled text-white-50 " href="{{path(route,query|merge({(pageParameterName):page}))}}">{{page}} </a>
          </li>
        {% endif %}
        
      {% endfor %}
      
   {#    <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item active" aria-current="page">
        <a class="page-link" href="#">2</a>
      </li>
      <li class="page-item"><a class="page-link" href="#">3</a></li> #}
      {% if next is defined %}
        <li class="page-item">
        <a class="page-link" href="{{path(route,query|merge({(pageParameterName):next}))}}">Next</a>
      </li>
      {% else %}
        
      {% endif %}
      
    </ul>
  </nav>
{% endif %}