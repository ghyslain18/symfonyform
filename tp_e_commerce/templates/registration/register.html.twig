{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class= "container security-form">
        
        <div class="login-form">
            <h1>Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

            {# row pour avoir label  #}
                {{  form_widget(registrationForm.email,{'attr':{'class':'form-control','placeholder':"email"}}) }}
                
                <br>
                {{  form_widget(registrationForm.firstName,{'attr':{'class':'form-control','placeholder':"nom"}}) }}
                <br>
                {{  form_widget(registrationForm.lastName,{'attr':{'class':'form-control','placeholder':"prenomm"}}) }}
                <br>
                
                {{  form_widget(registrationForm.plainPassword,{'attr':{'class':'form-control','placeholder':"mot de passe"}})
                 }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-block btn-primary">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
